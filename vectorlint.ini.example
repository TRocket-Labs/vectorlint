EvalsPath=.github/evals   
ScanPaths=[*.md]
Concurrency=4
DefaultSeverity=warning

# Optional: map prompts to files
[Prompts]
paths=["Default:evals", "Blog:evals/blog"]

[Defaults]
include=["**/*.md"]
exclude=["archived/**"]

[Directory:Blog]
include=["content/blog/**/*.md"]
exclude=["content/blog/drafts/**"]

[Prompt:Headline]
include=["content/blog/**/*.md"]
exclude=["content/blog/drafts/**"]