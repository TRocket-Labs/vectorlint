{
  "name": "vectorlint",
  "version": "1.0.0",
  "description": "LLM-based prose linter for subjective writing issues",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage"
  },
  "bin": {
    "vectorlint": "./dist/index.js"
  },
  "keywords": [
    "linting",
    "content",
    "ai",
    "compliance",
    "markdown",
    "content QA"
  ],
  "author": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "micromatch": "^4.0.5",
    "openai": "^4.0.0",
    "strip-ansi": "^7.1.0",
    "yaml": "^2.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^2.0.0"
  }
}
